# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://nexajs_user:nexajs_password@localhost:5432/nexajs

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=true

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute

# File Upload
MAX_FILE_SIZE=10485760
MAX_FILES=10

# Logging
LOG_LEVEL=info

# API Configuration
API_HOST=localhost:3001

# Email Configuration
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@nexajs.com

# External Services
SENTRY_DSN=

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_RATE_LIMIT=true
ENABLE_CORS=true

# Security
SESSION_SECRET=your-super-secret-session-key

# Cache Configuration
CACHE_TTL=3600

# Queue Configuration
QUEUE_REDIS_URL=redis://localhost:6379

# Monitoring
ENABLE_METRICS=false
METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *

# AI Integration
OPENAI_API_KEY=
AI_ENABLED=false

# Payment Processing
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Storage
STORAGE_PROVIDER=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# WebSocket
WS_ENABLED=true
WS_PORT=3002

# Testing
TEST_DATABASE_URL=postgresql://nexajs_user:nexajs_password@localhost:5432/nexajs_test

# Performance
ENABLE_COMPRESSION=true
ENABLE_ETAG=true

# Internationalization
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,es,fr,de

# Business Logic
COMPANY_NAME=NexaJS
SUPPORT_EMAIL=support@nexajs.com
ADMIN_EMAIL=admin@nexajs.com

# Timezone
DEFAULT_TIMEZONE=UTC

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Search
ENABLE_FULL_TEXT_SEARCH=false
SEARCH_INDEX_PREFIX=nexajs

# Workflow
WORKFLOW_ENABLED=true
WORKFLOW_MAX_STEPS=50

# Reports
REPORTS_ENABLED=true
REPORTS_STORAGE_PATH=./reports

# Notifications
NOTIFICATIONS_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=false

# Audit
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=365

# Encryption
ENCRYPTION_KEY=
ENCRYPTION_ALGORITHM=aes-256-gcm

# API Keys
API_KEY_HEADER=X-API-Key
API_KEY_ENABLED=false

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# Development Tools
ENABLE_DEBUG_MODE=true
ENABLE_PROFILING=false

# Database Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# Redis Pool
REDIS_POOL_MIN=2
REDIS_POOL_MAX=10

# Timeouts
REQUEST_TIMEOUT=30000
RESPONSE_TIMEOUT=30000

# Limits
MAX_REQUEST_SIZE=1048576
MAX_RESPONSE_SIZE=10485760 